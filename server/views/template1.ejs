<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Template 1 Blog Preview</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.1.2/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <style>
      body,
      html {
        height: 100%;
        width: 100%;
        margin: 0;
        padding: 0;
      }
    </style>
  </head>
  <body class="bg-gray-50 w-full min-h-screen">
    <div class="w-full bg-white p-8 md:p-12">
      <div class="w-full mx-auto px-4 md:px-8 lg:px-12">
        <h1 class="text-5xl font-bold mb-4 text-purple-800"><%= title %></h1>
        <p class="text-gray-700 text-lg mb-6"><%= content %></p>
        <div class="flex flex-wrap gap-2">
          <% tags.forEach((tag) => { %>
          <span
            class="bg-purple-100 text-purple-600 px-3 py-1 rounded-full text-sm font-medium"
          >
            <%= tag %>
          </span>
          <% }); %>
        </div>
      </div>
    </div>
  </body>
</html>
